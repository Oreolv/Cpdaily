<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F4F4"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <!--TIPS-->
    <androidx.cardview.widget.CardView
        android:id="@+id/tips"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="20px"
                android:text="Tips:"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:layout_marginTop="20px"
                android:layout_marginBottom="15dp"
                android:text="密码为身份证后六位"
                android:textSize="18dp"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--Edit-->
    <LinearLayout
        android:id="@+id/edit"
        android:layout_below="@+id/tips"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/logo_username"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:hint="请输入学号">
        </EditText>
        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/logo_password"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:hint="请输入密码">
        </EditText>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progess"
        android:visibility="gone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
    </ProgressBar>
    <!--sendgroup-->
    <RelativeLayout
        android:id="@+id/sendgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit"
        android:layout_marginTop="3dp">

        <CheckBox
            android:id="@+id/remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:checked="true"
            android:text="记住密码与运营商"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/yys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:spinnerMode="dialog"
            android:entries="@array/languages"></Spinner>

    </RelativeLayout>
    <!--send-->
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendgroup"
        android:layout_marginTop="5dp"
        android:text="提交">
    </Button>
    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginTop="5dp"
        android:text="注销">
    </Button>
</RelativeLayout>